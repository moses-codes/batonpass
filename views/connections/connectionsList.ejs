<% let myConnections = users.filter( user => { %>
<%     if( currUser.contactConfirm.indexOf(user._id) > -1 ) return user %>
<% })%>

<% let myPending = users.filter( user => { %>
<%     if( currUser.contactPending.indexOf(user._id) > -1 ) return user %>
<% })%>


<%- include('../partials/header') -%>
<main>

    <h1>The current user is <%= currUser %></h1>
    <h1>These are your connections:</h1>
    <h2><%= myConnections %></h2>
    <h1>These are your pending connections:</h1>
    <h2><%= myPending %></h2>

    <section class="flex mx-5">
    <% if (myPending.length) { %>
    <% myPending.forEach( user => {%>

      <div class="card w-96 bg-base-100">
          <figure class="px-10 pt-10">
            <img src="https://placeimg.com/400/225/arch" alt="Shoes" class="rounded-xl" />
          </figure>
          <div class="card-body items-center text-center">
            <h2 class="card-title"> <%= `${user.givenName} ${user.surName}` %> </h2>
            <h3> <%= `${user.city}, ${user.loc_state}` %> </h3>
            <p><%= `${user.summary}` %></p>
            <form class="col-3"
              action="/connections/confirmConnect/<%= user._id %>/<%= currUser._id %>/?_method=PUT"
              method="POST">
              <button class="btn btn-primary" type="submit">Accept</button>
            </form>
          </div>
        </div>
  
      <% }) %>
      <% } else {%>

        <div class="alert shadow-lg">
          <div>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-info flex-shrink-0 w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
            <span>No Pending Connections.</span>
          </div>
        </div>

      <% } %>
    </section>

    <% myConnections.forEach( user => {%>

    <div class="card w-3/4 bg-base-100 mx-auto">
        <figure class="px-10 pt-10">
          <img src="https://placeimg.com/400/225/arch" alt="Shoes" class="rounded-xl" />
        </figure>
        <div class="card-body items-center text-center">
          <h2 class="card-title"> <%= `${user.givenName} ${user.surName}` %> </h2>
          <h3> <%= `${user.city}, ${user.loc_state}` %> </h3>
          <p><%= `${user.summary}` %></p>
          <p class="text-left"><%= `${user.bio}` %></p>
          <a href="mailto:<%= `${user.email}` %>"><%= `${user.email}` %></a>
        </div>
          <form class="col-3 mx-auto"
          action="/connections/<%= user._id %>"
          method="GET">
          <button class="btn btn-primary" type="submit">Visit Profile</button>
          </form>
      </div>

    <% }) %>
    
</main>
<%- include('../partials/footer') -%>